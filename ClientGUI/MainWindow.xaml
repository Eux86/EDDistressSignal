<Window x:Class="ClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="373.298" Width="877.187">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="288*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Button Name="sendButton" Content="Send Distress Signal" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="217" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Height="22"/>
        <ListBox Name="messagesList" Margin="10,118,10,10"/>
        <TextBox Name="locX" HorizontalAlignment="Left" Height="23" Margin="243,88,0,0" TextWrapping="Wrap" Text="-22.844" VerticalAlignment="Top" Width="51"/>
        <TextBox Name="locY" HorizontalAlignment="Left" Height="23" Margin="299,88,0,0" TextWrapping="Wrap" Text="36.531" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.497,0.555"/>
        <TextBox Name="locZ" HorizontalAlignment="Left" Height="23" Margin="349,88,0,0" TextWrapping="Wrap" Text="-1.188" VerticalAlignment="Top" Width="51"/>
        <TextBox x:Name="StarSystemName" HorizontalAlignment="Left" Height="23" Margin="243,65,0,0" TextWrapping="Wrap" Text="Unknown" VerticalAlignment="Top" Width="157"/>
        <TextBox IsEnabled="False" Name="apiKey" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,10,98,0"/>
        <Button Name="apiKeyButton" IsEnabled="False" Content="Save" VerticalAlignment="Top" Margin="0,11,10,0" HorizontalAlignment="Right" Width="83" Click="apiKeyButton_Click" Height="22"/>
        <Button Name="manualPositionButton" Content="Manual Position" HorizontalAlignment="Left" VerticalAlignment="Top" Width="97" Margin="405,89,0,0" Click="manualPositionButton_Click" Height="22"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Own Distress Signals" Grid.Row="0"/>
            <ListBox Name="ownSignalsList" Margin="10,27,10,10" Grid.Row="0"/>
            <Label Content="Others Distress Signals" Grid.Row="1"/>
            <ListBox Name="othersSignalsList" Margin="10,27,10,11" Grid.Row="1"/>
            <Label Content="Answered Distress Signals" Grid.Row="2"/>
            <ListBox Name="answeredSignalsList" Margin="10,29,10,10" Grid.Row="2" />
        </Grid>
        <TextBox IsEnabled="False" x:Name="journalFilePath" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,38,98,0"/>

    </Grid>
</Window>
